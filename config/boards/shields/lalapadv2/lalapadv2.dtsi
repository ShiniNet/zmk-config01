#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/zmk/input_transform.h>
#include <input/processors.dtsi>
#include "lalapadv2-layouts.dtsi"

/ {
    chosen {
        zmk,physical-layout = &lalapadv2_physical_layout;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;
        map = <
            RC(0,0)	RC(0,1)	RC(0,2)	RC(0,3)	RC(0,4)	RC(0,5)		    RC(0,7)	RC(0,8)	RC(0,9)	RC(0,10) RC(0,11)
            RC(1,0)	RC(1,1)	RC(1,2)	RC(1,3)	RC(1,4)	RC(1,5)		    RC(1,7)	RC(1,8)	RC(1,9)	RC(1,10) RC(1,11)
            RC(2,0)	RC(2,1)	RC(2,2)	RC(2,3)	RC(2,4)	RC(2,5)		    RC(2,7)	RC(2,8)	RC(2,9)	RC(2,10) RC(2,11)
            RC(3,0)	RC(3,1)	RC(3,2)	RC(3,3)	RC(3,4)	RC(3,5)	RC(3,6)	RC(3,7)	RC(3,8)	RC(3,9)	RC(3,10) RC(3,11)
                            RC(4,2)	RC(4,3)	RC(4,4)	RC(4,5)	RC(4,6)	RC(4,7)	RC(4,8)	RC(4,9)	RC(4,10)	

        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;

        diode-direction = "col2row";
        row-gpios
            = <&xiao_d 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
            , <&xiao_d 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio1  1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };

    // Encoders
    left_encoder: left_encoder {
        compatible = "alps,ec11";
        status = "disabled";
    };
    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder>;
        triggers-per-rotation = <10>;
    };

    // Input Listners
    split_inputs_R {
        #address-cells = <1>;
        #size-cells = <0>;

        trackpad_split_R: trackpad_split_R@0 {
            compatible = "zmk,input-split";
            reg = <0>;
        };
    };
    split_inputs_L {
        #address-cells = <1>;
        #size-cells = <0>;

        trackpad_split_L: trackpad_split_L@1 {
            compatible = "zmk,input-split";
            reg = <1>;
        };
    };


    trackpad_listener_R: trackpad_listener_R {
        compatible = "zmk,input-listener";
        status = "disabled";
        device = <&trackpad_split_R>;
        input-processors = <&zip_xy_scaler 1 5>,
                           <&zip_scroll_scaler 1 12>;
    };
    trackpad_listener_L: trackpad_listener_L {
        compatible = "zmk,input-listener";
        status = "disabled";
        device = <&trackpad_split_L>;
        input-processors = <&zip_xy_scaler 1 5>,
                           <&zip_scroll_scaler 1 12>;
    };

};

// TrackPad on I2C
&xiao_i2c {
    status = "okay";

    iqs9151: iqs9151@56 {
        compatible = "azoteq,iqs9151";
        reg = <0x56>;
        status = "okay";
        irq-gpios = <&xiao_d 6 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        reset-gpios = <&xiao_d 10 GPIO_ACTIVE_LOW>;

    };
};
